{
  "name": "board-games",
  "description": "Categorize and publish your board games collection",
  "version": "1.0.0",
  "author": "Darek Kay <hello@darekkay.com> (https://darekkay.com/)",
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "handlebars": "4.2.0",
    "rc-slider": "8.7.1",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "react-scripts": "3.1.1",
    "react-tooltip": "3.11.1"
  },
  "devDependencies": {
    "cross-env": "5.2.1",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.14.0",
    "eslint-config-prettier": "6.3.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-react": "7.14.3",
    "gulp": "4.0.2",
    "gulp-yaml": "2.0.4",
    "prettier": "1.18.2",
    "why-did-you-update": "1.0.6"
  },
  "homepage": "https://darekkay.com/board-games",
  "license": "MIT",
  "main": "src/index.js",
  "private": true,
  "scripts": {
    "build": "npm run yaml-convert && react-scripts build && npm run list-all",
    "ci": "npm run lint:check && npm run test",
    "format": "prettier --write -- \"{src,public}/**/*.{js,jsx,json,css}\"",
    "lint:check": "eslint src/**/*.js",
    "lint:fix": "eslint --fix src/**/*.js",
    "list-all": "node scripts/list-all.js",
    "start": "npm run yaml-convert && react-scripts start",
    "test": "cross-env CI=true react-scripts test --env=jsdom --modulePaths=src",
    "yaml-convert": "gulp convertYaml"
  }
}
